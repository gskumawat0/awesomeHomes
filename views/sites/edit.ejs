<% include ../partials/header %>
<div class = "container">
    <div class = "container">
       <h2 class = "text-center" style = " margin: 15px auto"> Edit <%=site.name%> project status</h2>
  </div>
 </div>
   <div class = "container-fluid" style = "width : 33%; margin: 28px auto">
   <form action="/sites/<%=site._id %>?_method=put" method="post">
    <input type="text" name = "site[name]"  placeholder='name' value = "<%=site.name%>" class = "form-control form-group">
    <input type="text" name = "site[image]" placeholder='image url' value = "<%=site.image%>" class = "form-control form-group">
    <input type="text" name = "site[body]" placeholder='description' value = "<%=site.body%>" class = "form-control form-group">
    <input type="text" name = "site[location]" placeholder='location' value = "<%=site.location%>" class = "form-control form-group">
    <input type='hidden' name='_csrf' value='<%= csrfToken %>' >
    <button class = "btn btn-primary btn-block" class = "form-control form-group">submit</button>
    </form>
      <a href="/sites">back to sites</a>
</div>

<% include ../partials/footer %>